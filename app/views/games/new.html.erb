<h1>New game</h1>
<% if @letters %>
<% @letters.each do |letter| %>
<%= letter %>
<% end %>
<% end %>

<form action="/score" method= "post" data-turbo="false">
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
<label for="letters" class="form-label">What's the logest word you can find</label>
<input type="text" id="letters" class="form-control" name = "word">
<input type="submit" value= "play">
</form>
